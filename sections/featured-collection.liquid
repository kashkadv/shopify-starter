{% if section.settings.collection.products != blank %}  
  <div class="bg-white">
    <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
      <div class="md:flex md:items-center md:justify-between">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900">{{ section.settings.heading }}</h2>
        <a href="#" class="hidden text-sm font-medium text-gray-900 hover:text-gray-800 md:block">
          {{ section.settings.button_label }}
          <span aria-hidden="true"> &rarr;</span>
        </a>
      </div>
  
      <div class="mt-6 grid grid-cols-2 gap-x-4 gap-y-10 sm:gap-x-6 md:grid-cols-4 md:gap-y-0 lg:gap-x-8">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          {% render 'product-card' with product: product %}
        {% endfor %}
      </div>
  
      <div class="mt-8 text-sm md:hidden">
        <a href="{{ section.settings.button_url }}" class="font-medium text-gray-900 hover:text-gray-800">
          {{ section.settings.button_label }}
          <span aria-hidden="true"> &rarr;</span>
        </a>
      </div>
    </div>
  </div>
{% endif %}


{% schema %}
  {
    "name": "t:sections.featured-collection.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured products"
      },
      {
        "type": "range",
        "id": "products_to_show",
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Products to show",
        "default": 4
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Shop the collection"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      }
    ],
    "presets": [
      {
        "name": "t:sections.featured-collection.name"
      }
    ]
  }
{% endschema %}