{% schema %}
{
  "name": "main-product",
  "blocks": [
      {
          "name": "Vendor",
          "type": "vendor",
          "settings": [
            {
              "type": "inline_richtext",
              "id": "text",
              "default": "Text block",
              "label": "Text label"
            }
          ]
        },
    {
      "name": "Product title",
      "type": "product_title",
      "settings": [
        {
          "type": "select",
          "id": "tag",
          "label": "Heading tag",
          "options": [
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            },
            {
              "value": "h4",
              "label": "H4"
            }
          ],
          "default": "h1"
        }
      ]
    }
  ],
  "settings": [
    
  ]
}
{% endschema %}