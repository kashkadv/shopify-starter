
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'vendor' %}
      {{ block.settings.text }}
    {% else %}
    {% when 'product_title' %}
      <{{ block.settings.tag }}>{{ product.title }}</{{ block.settings.tag }}>
    {% else %}
  {% endcase %}
{% endfor %}



